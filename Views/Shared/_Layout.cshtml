@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var action = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    string Active(string c, string? a = null)
        => (controller.Equals(c, StringComparison.OrdinalIgnoreCase) &&
            (a is null || action.Equals(a, StringComparison.OrdinalIgnoreCase)))
           ? "active" : "";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DondeComemos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="shadow-sm bg-white sticky-top">
        <nav class="navbar navbar-expand-lg container">
            <a class="navbar-brand fw-semibold text-body" asp-controller="Home" asp-action="Index">
                🍽️ dondecomemos.aqp
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav mx-auto gap-2">
                    <li class="nav-item">
                        <a class="nav-link @Active("Home","Index")" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door"></i> Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @Active("Restaurantes","Search")" asp-controller="Restaurantes" asp-action="Search">
                            <i class="bi bi-search"></i> Búsqueda
                        </a>
                    </li>

                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @Active("Restaurantes","Index")" href="#" id="adminDropdown" 
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear"></i> Administrar
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Restaurantes" asp-action="Index">
                                        <i class="bi bi-shop"></i> Restaurantes
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Restaurantes" asp-action="Create">
                                        <i class="bi bi-plus-circle"></i> Agregar Restaurante
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Estadisticas" asp-action="Index">
                                        <i class="bi bi-graph-up"></i> Estadísticas
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link @Active("Contact","Index")" asp-controller="Contact" asp-action="Index">
                            <i class="bi bi-envelope"></i> Contacto
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @Active("Suggestions","Index")" asp-controller="Suggestions" asp-action="Index">
                            <i class="bi bi-lightbulb"></i> Sugerencias
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-lg-3 align-items-lg-center gap-2">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" 
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-2" 
                                     style="width: 35px; height: 35px;">
                                    <i class="bi bi-person-fill"></i>
                                </div>
                                <span class="d-none d-lg-inline">@User.Identity?.Name</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                        <i class="bi bi-person-circle me-2"></i>Mi Perfil
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-dark btn-sm px-3" asp-area="Identity" asp-page="/Account/Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Iniciar Sesión
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-dark btn-sm px-3" asp-area="Identity" asp-page="/Account/Register">
                                <i class="bi bi-person-plus me-1"></i>Registrarse
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        <main role="main" class="pb-0">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white pt-5 pb-3 mt-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <h3 class="fw-bold mb-3">🍽️ DondeComemos</h3>
                    <p class="text-white-50">
                        Tu guía confiable para descubrir los mejores restaurantes de Arequipa.
                    </p>
                </div>

                <div class="col-lg-2 col-md-6">
                    <h5 class="fw-bold mb-3">Explorar</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a asp-controller="Home" asp-action="Index" class="text-white-50 text-decoration-none">
                                Inicio
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Restaurantes" asp-action="Search" class="text-white-50 text-decoration-none">
                                Restaurantes
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Contact" asp-action="Index" class="text-white-50 text-decoration-none">
                                Contacto
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6">
                    <h5 class="fw-bold mb-3">Contacto</h5>
                    <p class="text-white-50 small mb-1">
                        <i class="bi bi-geo-alt-fill me-2"></i>Av. Principal 123, Arequipa
                    </p>
                    <p class="text-white-50 small mb-1">
                        <i class="bi bi-telephone-fill me-2"></i>+51 999 999 999
                    </p>
                    <p class="text-white-50 small">
                        <i class="bi bi-envelope-fill me-2"></i>info@dondecomemos.com
                    </p>
                </div>

                <div class="col-lg-3 col-md-6">
                    <h5 class="fw-bold mb-3">Síguenos</h5>
                    <div class="d-flex gap-2">
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle" style="width: 40px; height: 40px;">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle" style="width: 40px; height: 40px;">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle" style="width: 40px; height: 40px;">
                            <i class="bi bi-twitter"></i>
                        </a>
                    </div>
                </div>
            </div>

            <hr class="my-4 bg-secondary">

            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <p class="text-white-50 small mb-0">
                        © @DateTime.Now.Year DondeComemos. Todos los derechos reservados.
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p class="text-white-50 small mb-0">
                        Hecho con <i class="bi bi-heart-fill text-danger"></i> en Arequipa, Perú
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>