@model DondeComemos.Models.Restaurante
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = Model.Nombre;
}

<div class="container-fluid py-4">
    <!-- Hero del Restaurante -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-lg border-0">
                <div class="row g-0">
                    <div class="col-md-5">
                        <img src="@(string.IsNullOrEmpty(Model.ImagenUrl) ? "/img/restaurant-default.jpg" : Model.ImagenUrl)" 
                             class="img-fluid w-100 h-100" style="object-fit: cover; min-height: 400px;" alt="@Model.Nombre">
                    </div>
                    <div class="col-md-7">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h1 class="display-5 fw-bold mb-2">@Model.Nombre</h1>
                                    @if (!string.IsNullOrEmpty(Model.TipoCocina))
                                    {
                                        <span class="badge bg-primary me-2">@Model.TipoCocina</span>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.RangoPrecios))
                                    {
                                        <span class="badge bg-success">@Model.RangoPrecios</span>
                                    }
                                </div>
                                <div class="text-end">
                                    <div class="display-6 text-warning">
                                        @for (int i = 0; i < Model.Rating; i++)
                                        {
                                            <i class="bi bi-star-fill"></i>
                                        }
                                    </div>
                                    <small class="text-muted">@Model.Rating de 5</small>
                                </div>
                            </div>

                            <p class="lead text-muted">@Model.Descripcion</p>

                            <hr class="my-3">

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <h6 class="fw-bold"><i class="bi bi-geo-alt text-danger"></i> Dirección</h6>
                                    <p class="text-muted mb-0">@Model.Direccion</p>
                                </div>

                                @if (!string.IsNullOrEmpty(Model.Telefono))
                                {
                                    <div class="col-md-6">
                                        <h6 class="fw-bold"><i class="bi bi-telephone text-success"></i> Teléfono</h6>
                                        <p class="text-muted mb-0">
                                            <a href="tel:@Model.Telefono">@Model.Telefono</a>
                                        </p>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(Model.Horario))
                                {
                                    <div class="col-md-6">
                                        <h6 class="fw-bold"><i class="bi bi-clock text-info"></i> Horario</h6>
                                        <p class="text-muted mb-0">@Model.Horario</p>
                                    </div>
                                }
                            </div>

                            <div class="mt-4">
                                <a href="#menu" class="btn btn-primary btn-lg me-2">
                                    <i class="bi bi-card-list"></i> Ver Menú
                                </a>
                                <a href="#mapa" class="btn btn-outline-secondary btn-lg">
                                    <i class="bi bi-map"></i> Ver Ubicación
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Menú del Restaurante -->
    <div class="row mb-4" id="menu">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0"><i class="bi bi-card-list"></i> Menú</h3>
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <a asp-controller="Productos" asp-action="Create" asp-route-restauranteId="@Model.Id" 
                               class="btn btn-light btn-sm">
                                <i class="bi bi-plus-circle"></i> Agregar Producto
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Productos.Any())
                    {
                        var categorias = Model.Productos.GroupBy(p => p.Categoria);
                        
                        @foreach (var categoria in categorias)
                        {
                            <div class="mb-4">
                                <h4 class="fw-bold text-primary mb-3 border-bottom pb-2">
                                    <i class="bi bi-tag-fill"></i> @categoria.Key
                                </h4>
                                <div class="row g-3">
                                    @foreach (var producto in categoria)
                                    {
                                        <div class="col-md-6 col-lg-4">
                                            <div class="card h-100 shadow-sm">
                                                @if (!string.IsNullOrEmpty(producto.ImagenUrl))
                                                {
                                                    <img src="@producto.ImagenUrl" class="card-img-top" 
                                                         style="height: 200px; object-fit: cover;" alt="@producto.Nombre">
                                                }
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                                        <h5 class="card-title mb-0">@producto.Nombre</h5>
                                                        <span class="badge bg-success fs-6">S/ @producto.Precio.ToString("F2")</span>
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(producto.Descripcion))
                                                    {
                                                        <p class="card-text text-muted small">@producto.Descripcion</p>
                                                    }
                                                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                                                    {
                                                        <div class="d-flex gap-2 mt-2">
                                                            <a asp-controller="Productos" asp-action="Edit" asp-route-id="@producto.Id" 
                                                               class="btn btn-sm btn-warning">
                                                                <i class="bi bi-pencil"></i>
                                                            </a>
                                                            <a asp-controller="Productos" asp-action="Delete" asp-route-id="@producto.Id" 
                                                               class="btn btn-sm btn-danger">
                                                                <i class="bi bi-trash"></i>
                                                            </a>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox display-1 text-muted"></i>
                            <h5 class="text-muted mt-3">Este restaurante aún no ha agregado productos al menú</h5>
                            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                            {
                                <a asp-controller="Productos" asp-action="Create" asp-route-restauranteId="@Model.Id" 
                                   class="btn btn-primary mt-3">
                                    <i class="bi bi-plus-circle"></i> Agregar Primer Producto
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Mapa de Ubicación -->
    <div class="row mb-4" id="mapa">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white">
                    <h3 class="mb-0"><i class="bi bi-map"></i> Ubicación</h3>
                </div>
                <div class="card-body p-0">
                    @if (Model.Latitud.HasValue && Model.Longitud.HasValue)
                    {
                        <div id="map" style="height: 400px;"></div>
                    }
                    else
                    {
                        <div class="p-4 text-center">
                            <i class="bi bi-geo-alt display-1 text-muted"></i>
                            <p class="text-muted mt-3">No hay coordenadas disponibles para este restaurante</p>
                            <p class="text-muted"><strong>Dirección:</strong> @Model.Direccion</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Botón volver -->
    <div class="row">
        <div class="col-12">
            <a asp-action="Search" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver a la búsqueda
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @if (Model.Latitud.HasValue && Model.Longitud.HasValue)
    {
        <script src="https://maps.googleapis.com/maps/api/js?key=TU_API_KEY_AQUI"></script>
        <script>
            function initMap() {
                const position = { lat: @Model.Latitud.Value, lng: @Model.Longitud.Value };
                const map = new google.maps.Map(document.getElementById("map"), {
                    zoom: 15,
                    center: position,
                });
                new google.maps.Marker({
                    position: position,
                    map: map,
                    title: "@Model.Nombre"
                });
            }
            window.onload = initMap;
        </script>
    }
}