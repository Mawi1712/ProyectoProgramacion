@model DondeComemos.Models.HomeViewModel
@{
    ViewData["Title"] = "Inicio";
}

<!-- Hero Section -->
<section class="hero">
    <div class="hero-overlay"></div>
    <div class="hero-content container">
        <h1 class="display-4 fw-bold text-white text-center">DondeComemos</h1>
        <p class="lead text-white-50 text-center mt-3">
            Descubre los mejores restaurantes de Arequipa
        </p>
        <div class="text-center mt-4">
            <a class="btn btn-light btn-lg px-4 py-2" asp-controller="Restaurantes" asp-action="Search">
                <i class="bi bi-search"></i> Iniciar la búsqueda
            </a>
        </div>
    </div>
</section>

<!-- Favoritos -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="fw-bold text-center mb-4">🌟 Restaurantes Destacados</h2>
        <div class="row g-4">
            @foreach (var restaurante in Model.Favoritos)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@restaurante.ImagenUrl" class="card-img-top" alt="@restaurante.Nombre" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@restaurante.Nombre</h5>
                            <p class="card-text">@restaurante.Descripcion</p>
                            <p class="text-warning">@string.Concat(Enumerable.Repeat("⭐", restaurante.Rating))</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Reseñas -->
<section class="py-5 bg-white">
    <div class="container">
        <h2 class="fw-bold text-center mb-4">💬 Lo Que Dicen Nuestros Usuarios</h2>
        <div class="row g-4">
            @foreach (var testimonio in Model.Reseñas)
            {
                <div class="col-md-4 text-center">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <p class="fst-italic">"@testimonio.Texto"</p>
                            <p class="fw-bold mb-0">@testimonio.Usuario</p>
                            <p class="text-muted small">@testimonio.Rol</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- CTA -->
<section class="py-5 bg-dark text-white text-center">
    <div class="container">
        @if (!(User.Identity?.IsAuthenticated ?? false))
        {
            <h3 class="mb-4">¿Listo para explorar?</h3>
            <a class="btn btn-light btn-lg px-4 me-2" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus"></i> Registrarse
            </a>
            <a class="btn btn-outline-light btn-lg px-4" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
            </a>
        }
        else
        {
            <h3 class="mb-4">¡Explora los mejores restaurantes!</h3>
            <a class="btn btn-light btn-lg px-4" asp-controller="Restaurantes" asp-action="Search">
                <i class="bi bi-search"></i> Ver Todos los Restaurantes
            </a>
        }
    </div>
</section>